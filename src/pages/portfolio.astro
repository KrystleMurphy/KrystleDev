---
import Navbar from '../components/Common/Navbar.jsx'; 
import Footer from '../components/Common/Footer.jsx'; 
import Portfolio from '../components/Portfolio/Portfolio.jsx'; 

// Frontmatter (optional)
title: 'Portfolio - Krystle.dev'
description: 'Showcasing the projects I have worked on as a Front-End Web Developer.'
---

<html lang="en">
  <head>
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://krystle.dev/assets/metaImage.jpg" />
    <meta property="og:url" content="https://krystle.dev/portfolio" />
    <meta property="og:type" content="website" />
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://krystle.dev/assets/metaImage.jpg" />
    
    <!-- Canonical Link -->
    <link rel="canonical" href="https://krystle.dev/portfolio" />
    
    <!-- Additional Meta Tags -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="index, follow" />

    <!-- Favicon -->
    <link rel="icon" href="./assets/favicon.ico" /> <!-- Update this path if you have a favicon -->

  </head>
  <body>
    <Navbar />
    <main>
      <Portfolio />  <!-- Render the Portfolio component -->
    </main>
    <Footer />
  </body>
</html>
