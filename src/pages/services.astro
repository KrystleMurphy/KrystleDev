---
import Navbar from '../components/Common/Navbar.astro';  // Adjust the import path as necessary
import Footer from '../components/Common/Footer.astro';  // Adjust the import path as necessary
import Services from '../components/Services.astro'; // Path to your Services component

// Frontmatter (optional)
title: 'Services - Krystle.Dev'
description: 'Discover the web design services offered by Krystle.Dev, from initial consultation to deployment.'
---

<html lang="en">
  <head>
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="URL_to_your_image" /> <!-- Replace with your image URL -->
    <meta property="og:url" content="https://krystle.dev/services" /> <!-- Replace with your actual URL -->
    <meta property="og:type" content="website" />
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="URL_to_your_image" /> <!-- Replace with your image URL -->
    
    <!-- Canonical Link -->
    <link rel="canonical" href="https://krystle.dev/services" />
    
    <!-- Additional Meta Tags -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="index, follow" />

        <!-- Favicon -->
    <link rel="icon" href="./assets/favicon.ico" /> <!-- Update this path if you have a favicon -->
    
  </head>
  <body>
    <Navbar />
    <main>
      <Services />
    </main>
    <Footer />
  </body>
</html>
