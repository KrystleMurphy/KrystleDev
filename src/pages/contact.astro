---
import Navbar from '../components/Common/Navbar.astro';  // Adjust the import path as necessary
import Footer from '../components/Common/Footer.astro';  // Adjust the import path as necessary
import ContactForm from '../components/ContactForm.astro'; // Path to your ContactForm component

// Frontmatter (optional)
title: 'Contact - Krystle.dev'
description: 'Get in touch to discuss your project with Krystle, a Front-End Web Developer.'
---

<html lang="en">
  <head>
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://krystle.dev/assets/metaImage.jpg" />
    <meta property="og:url" content="https://krystle.dev/contact" />
    <meta property="og:type" content="website" />
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://krystle.dev/assets/metaImage.jpg" />
    
    <!-- Canonical Link -->
    <link rel="canonical" href="https://krystle.dev/contact" />
    
    <!-- Additional Meta Tags -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="index, follow" />
    
    <!-- Author Tag -->
    <meta name="author" content="Krystle Murphy" />
    
    <!-- Favicon -->
    <link rel="icon" href="./assets/favicon.ico" /> <!-- Update this path if you have a favicon -->

  </head>
  <body>
    <Navbar />
    <main>
      <ContactForm />  <!-- Render the ContactForm component -->
    </main>
    <Footer />
  </body>
</html>
